root = true


[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
profile = black
indent_size = 4
max_line_length = 120


[*.{yml,yaml,ini,json}]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
max_line_length = 0

[Makefile]
indent_style = tab
indent_size = 8

[*.bat]
indent_style = tab
end_of_line = crlf
